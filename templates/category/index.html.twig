{% extends 'base.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table">
        <a href="{{path('create_category')}} " class='btn btn-success'>Create new Category</a>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Category</th>

            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <th scope="row">{{ category.id }}</th>
                    <td>{{ category.CategoryName }}</td>

                    <td>

                        {#                        <a href="#" class='btn btn-default'>Edit</a>#}
                        {#                        <a href="#" class='btn btn-default'>Delete</a>#}
                        <a href="{{path('details_category',{'id':category.id})}} " class='btn btn-success'>View</a>
                        <a href="{{path('edit_category',{'id':category.id})}} " class='btn btn-default'>Edit</a>
                        <a href="{{ path('delete_category', {'id': category.id}) }} "class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
